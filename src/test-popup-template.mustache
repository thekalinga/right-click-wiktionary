<div id="wikitionary-bubble-host">
  <style>
    #wikitionary-bubble-main,
    #wikitionary-arrow-container {
      background-color: #ffd;
      z-index: 99997;
    }
    * {
      box-sizing: border-box;
    }
    a {
      color: #11c;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
    .display-none {
      display: none !important;
    }
    #wikitionary-bubble-main {
      border: 1px solid #999;
      border-radius: 4px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
      color: #222;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 14px;
      line-height: normal;
      padding: 9px;
      position: absolute;
      width: 300px;
    }
    #wikitionary-bubble-main:after {
      clear: both;
      content: '';
      display: table;
    }
    #wikitionary-bubble-close {
      position: absolute;
      top: 0;
      right: 0;
      width: 16px;
      height: 16px;
      background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAICAYAAADED76LAAAAYUlEQVQYV12PwQ2AMAwD2w3YBEaAycsIsAkbgC+qowikeyCfHLe31l5xiUM8gm8RQ2x9hmuRECIUNwL2KSwhRCh2BFda4j9CTlbBtQi5ySfy5mzMTXWka3FyEwLPzJv/TR8o8xvGTnBWXwAAAABJRU5ErkJggg==);
      background-position: center;
      background-repeat: no-repeat;
      cursor: pointer;
      opacity: 0.35;
    }
    #wikitionary-bubble-close:hover {
      opacity: 0.8;
    }
    #wikitionary-bubble-query-row {
      margin-bottom: 9px;
    }
    #wikitionary-bubble-query,
    #wikitionary-bubble-audio-icon {
      display: inline-block;
      height: 20px;
      vertical-align: top;
    }
    #wikitionary-bubble-query {
      font-size: 16px;
      font-weight: bold;
    }
    #wikitionary-bubble-audio-icon {
      background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAcUlEQVQ4y2P4//8/AyUYQhAH3gNxA7IAIQPmo/H3g/QA8XkgFiBkwHyoYnRQABVfj88AmGZcTuuHyjlgMwBZM7IE3NlQGhQe65EN+I8Dw8MLGgYoFpFqADK/YUAMwOsFigORatFIlYRElaRMWmaiBAMAp0n+3U0kqkAAAAAASUVORK5CYII=);
      background-position: center;
      background-repeat: no-repeat;
      cursor: pointer;
      margin-left: 8px;
      opacity: 0.5;
      width: 16px;
    }
    #wikitionary-bubble-audio-icon:hover {
      opacity: 1;
    }
    #wikitionary-bubble-meaning {
      line-height: 1.3;
    }
    #wikitionary-bubble-options-tip,
    #wikitionary-bubble-more,
    #wikitionary-bubble-attribution {
      font-size: 12px;
      line-height: 1.3;
      margin-top: 9px;
    }
    #wikitionary-bubble-options-tip {
      color: #c04;
    }
    #wikitionary-bubble-more a {
      float: right;
      word-break: break-all;
    }
    #wikitionary-bubble-attribution {
      color: #666;
      float: left;
      margin-right: 9px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      width: 230px;
    }
    #wikitionary-bubble-attribution a {
      color: #073;
    }
    #wikitionary-arrow-main {
      position: absolute;
      z-index: 99998;
    }
    #wikitionary-bubble-arrow-inner-up,
    #wikitionary-bubble-arrow-inner-down {
      background: transparent;
      border-left: 10px solid transparent;
      border-right: 10px solid transparent;
      left: 2px;
      position: absolute;
      width: 0;
      z-index: 99999;
    }
    #wikitionary-bubble-arrow-inner-up {
      border-bottom: 10px solid #ffd;
      top: 2px;
    }
    #wikitionary-bubble-arrow-inner-down {
      border-top: 10px solid #ffd;
    }
    #wikitionary-bubble-arrow-outer-up,
    #wikitionary-bubble-arrow-outer-down {
      background: transparent;
      border-left: 12px solid transparent;
      border-right: 12px solid transparent;
      left: 0px;
      position: absolute;
      width: 0;
    }
    #wikitionary-bubble-arrow-outer-up {
      border-bottom: 12px solid #999;
    }
    #wikitionary-bubble-arrow-outer-down {
      border-top: 12px solid #999;
    }
    .nytd_selection_button {
      display: none;
    }
  </style>
  <div id="wikitionary-bubble-main" style="left: {{mainLeft}}px; top: {{mainTop}}px;">
    <div id="wikitionary-bubble-close"></div>
    <div id="wikitionary-bubble-query-row" class="">
      <div id="wikitionary-bubble-query">{{word}}</div>
      <div id="wikitionary-bubble-audio-icon" class=""></div>
    </div>
    <div id="wikitionary-bubble-meaning">{{meaning}}</div>
    <div id="wikitionary-bubble-options-tip" class="display-none">
      Tip: Didn't want this definition pop-up? Try setting a trigger key in
      <a href="#">Extension Options</a>.
    </div>
    <div id="wikitionary-bubble-attribution" class="display-none">
      <a target="_blank"></a>
      <div></div>
    </div>
    <div id="wikitionary-bubble-more" class="">
      <a
        target="_blank"
        href="https://wiktionary.org/wiki/{{word}}"
      >
        More Â»
      </a>
    </div>
  </div>
  <div>
    <div id="wikitionary-arrow-main" style="top: {{arrowTop}}px; left: {{arrowLeft}}px;">
      <div id="wikitionary-bubble-arrow-inner-up"></div>
      <div id="wikitionary-bubble-arrow-outer-up"></div>
    </div>
  </div>
</div>
